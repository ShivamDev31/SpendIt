<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="@dimen/dimen_8">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvNameInitials"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_8"
        android:layout_marginStart="@dimen/dimen_8"
        android:background="@drawable/circular_tv"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/font_20"
        android:textStyle="bold"
        tools:text="S" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvFriendName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_8"
        android:layout_marginStart="@dimen/dimen_8"
        android:layout_toEndOf="@+id/tvNameInitials"
        android:layout_toRightOf="@+id/tvNameInitials"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="Shivam Chopra" />

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/cbFriendSelection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dimen_8"
        android:layout_marginRight="@dimen/dimen_8" />

</RelativeLayout>