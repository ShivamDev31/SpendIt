<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvLoginLogo"
        android:layout_width="@dimen/login_logo_dimens"
        android:layout_height="@dimen/login_logo_dimens"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_136"
        android:background="@drawable/ic_rupee"
        android:gravity="center"
        android:text="@string/rupee_amount"
        android:textColor="@color/white"
        android:textSize="136sp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvLoginAppName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLoginLogo"
        android:layout_marginTop="@dimen/dimen_16"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/font_32" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvLoginAppTagLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLoginAppName"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="@string/your_own_money_splitter"
        android:textColor="@color/white"
        android:textSize="@dimen/font_16" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sibGoogle"
        android:layout_width="@dimen/google_sign_in_button_width"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dimen_72"
        android:visibility="visible" />

    <include layout="@layout/progress_layout" />

</RelativeLayout>
