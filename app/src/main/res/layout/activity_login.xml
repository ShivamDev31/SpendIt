<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_launcher_background">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/ivLoginLogo"
        android:layout_width="@dimen/login_logo_dimens"
        android:layout_height="@dimen/login_logo_dimens"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_80"
        app:srcCompat="@drawable/ic_launcher" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvLoginAppName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivLoginLogo"
        android:layout_marginTop="@dimen/dimen_8"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="@string/app_name"
        android:textSize="@dimen/font_32" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tvLoginAppTagLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLoginAppName"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="@string/your_own_money_splitter"
        android:textSize="@dimen/font_16" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sibGoogle"
        android:layout_width="@dimen/google_sign_in_button_width"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:visibility="visible" />

</RelativeLayout>
